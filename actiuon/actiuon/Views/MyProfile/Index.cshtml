@model AppUser
<div class="side-text-profile group-wrapper col-9 d-none">
    <div class="row">
        <div class="col-6">
            <div class="personal-inf d-flex">
                <div class="pers-img col-4">
                    <img src="~/img/@Model.ProfilePhoto" />
                </div>
                <div class="pers-inf d-flex col-8">
                    <div class="pers-name d-flex">
                        <p>@Model.FirstName</p>
                        <p>@Model.LastName</p>
                    </div>
                    <p class="pers-occ">@User.Identity.Name</p>
                </div>
            </div>
        </div>
    </div>
    <div class="form-wrap">
        <form asp-controller="MyProfile" asp-action="Edit" method="post">
            <div class="row d-flex">
                <div class="col-6">
                    <div class="form-inner">
                        <label asp-for="FirstName"></label>
                        <input type="text" asp-for="FirstName" />
                        <span class="text-danger small" asp-validation-for="FirstName"></span>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-inner">
                        <label asp-for="LastName"></label>
                        <input type="text" asp-for="LastName" />
                        <span class="text-danger small" asp-validation-for="LastName"></span>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-inner">
                        <label asp-for="UserName"></label>
                        <input type="text" asp-for="UserName" />
                        <span class="text-danger small" asp-validation-for="UserName"></span>
                    </div>
                </div>
            </div>
            <div class="form-button d-flex">
                <button type="submit" class="update">Update</button>
                <button type="submit" class="cancel">Cancel</button>
            </div>
        </form>
    </div>
</div>